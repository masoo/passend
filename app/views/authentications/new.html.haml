!!! 5
%html
  %head
    %meta{charset: "utf8"}
    %meta{http: {equiv: "X-UA-Compatible"}}
    %meta{content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name: "viewport"}
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %title
      Passend
  %body.hold-transition.register-page
    .register-box
      .register-logo
        = link_to "Passend", root_path
      .register-box-body
        %p.login-box-msg
          = t(".sign_up_and_login")
        = form_for @authentication do |f|
          %div{class: "form-group has-feedback#{has_warning_flash_notice}"}
            = f.email_field :email, class: "form-control", placeholder: t(".email")
            %span.glyphicon.glyphicon-envelope.form-control-feedback
            - if flash[:notice].present?
              %span.help-block
                = t(".please_sign_up_and_login")
          .row
            .col-xs-6.col-xs-offset-3
              = f.submit t(".send_magic_login"), class: "btn btn-primary btn-block btn-flat"
